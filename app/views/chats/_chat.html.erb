<%= turbo_frame_tag chat do %>
    <div class="d-flex align-items-center justify-content-between">
        <div class="d-inline-flex align-items-center">
            <div class="pe-2">
                <%= link_to bi_icon('pencil', style: 'color: firebrick'),
                    edit_chat_path(chat), title: "Change the chat name" %>
            </div>
            <div class="lh-1 fs-4 fw-bold pe-2">
                <%= render "chats/chat_topic", resource: chat %>
            </div>
        </div>
        <div class="d-inline-flex align-items-center">
            <div class="pe-2"  title="Number of posts">
                (<%= chat.posts_count %>)
            </div>
            <div>
                <%= button_to bi_icon('trash'), chat_path(chat), method: :delete, title: "Destroy chat" %>
            </div>
        </div>
    </div>
<% end %>
