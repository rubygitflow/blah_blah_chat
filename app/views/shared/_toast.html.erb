<% if defined?(chat) && defined?(post) %>
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="receiveToast" class="toast" data-toast-target='toast' data-controller='toast'
         data-toast-id-value='<%= post&.id || '' %>'>
      <div class="toast-header">
        <strong class="me-auto"><%= render chat if chat %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body"><%= post&.body || '' %></div>
    </div>
  </div>
<% end %>
